{
  "$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
  "extends": ["../../biome.json"],
  "files": {
    "ignore": [".react-router", ".generated"],
    "include": [
      "app/**/*.ts",
      "app/**/*.tsx",
      "vite.config.ts",
      "playwright.config.ts",
      "tests/**/*.ts",
      "workers/**/*.ts"
    ]
  },
  "linter": {
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConsole": {
          "level": "error",
          "options": {
            "allow": ["error", "warn"]
          }
        }
      }
    }
  }
}
