{
  "name": "@downtown65/backend",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --port 3002",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "vitest",
    "lint": "biome check",
    "ci:lint": "biome ci",
    "postinstall": "pnpm run generate:cf && pnpm run generate:openapi",
    "format": "biome format",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "deploy": "wrangler deploy",
    "knip": "knip",
    "generate:openapi": "tsx scripts/generate-openapi.ts",
    "generate:cf": "wrangler types",
    "ci:generate": "pnpm run generate:cf && pnpm run generate:openapi",
    "clean": "rimraf node_modules"
  },
  "dependencies": {
    "@downtown65/logger": "workspace:*",
    "@downtown65/schema": "workspace:*",
    "@hono/zod-openapi": "1.2",
    "@scalar/hono-api-reference": " 0.9.30",
    "auth0": "5.2.0",
    "drizzle-orm": "1.0.0-beta.4-4605abe",
    "hono": "4.11.3",
    "jwt-decode": "4.0.0",
    "openapi3-ts": "4.5.0",
    "ulidx": "2.4.1",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@cloudflare/vitest-pool-workers": "0.11.1",
    "@types/node": "25.0.3",
    "@vitest/coverage-v8": "3.2.0",
    "dotenv": "17.2.3",
    "drizzle-kit": "1.0.0-beta.4-4605abe",
    "knip": "5.79.0",
    "rimraf": "6.0.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "3.2.0",
    "wrangler": "4.54.0"
  }
}
